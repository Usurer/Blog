@{
    var isAuthenticated = User.Identity.IsAuthenticated;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Styles/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="row">
                @* I have to keep this wrapper to use absolute positioning for a child elements - it requires a parent to have position different from static and row is static =\ *@
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            <h2 class="navbar-brand mainHeader__brand">Of This And That</h2>
                        </div>
                        <div class="col-xs-12 col-sm-4 mainHeader__navList__wrapper">
                            <ul class="nav navbar-nav  @(isAuthenticated ? "mainHeader__navList__loggedIn" : "mainHeader__navList")">
                                <li>About</li>
                                <li>Blog</li>
                                <li>Stuff</li>
                                @if (isAuthenticated)
                                {
                                    <li>@Html.ActionLink("Edit", "Add", "Blogpost")</li>
                                    <li>@Html.Action("LogOff", "Navigation")</li>
                                    //@Ajax.ActionLink("Log Off", "Logoff", "Account", null, new AjaxOptions() { HttpMethod = "POST" })
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tinymce")
    @Scripts.Render("~/bundles/app");
    
    @RenderSection("scripts", required: false)
</body>
</html>