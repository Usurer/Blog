<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="row row-eq-height">
                <div class="col-sm-8">
                    <h2>Of This And That</h2>
                </div>
                <div class="col-sm-4">
                    <div class="row header_navbar_links-wrapper">
                        <div class="col-sm-3">About</div>
                        <div class="col-sm-3">Blog</div>
                        <div class="col-sm-3">Stuff</div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row" style="background-color:grey">
            @*left indent*@
            <div class="col-sm-2" style="background-color:green"></div>

            @*content*@
            <div class="col-sm-8" style="background-color:yellow">
                <section>
                    <h3>Some Title</h3>
                    <p>Content</p>
                </section>
            </div>
            
            @*right indent*@
            <div class="col-sm-2" style="background-color:red"></div>
        </div>

        <div class="row">
            <div class="col-sm-4" style="background-color:red">
                a
            </div>
            <div class="col-sm-4" style="background-color:green">
                b
            </div>
            <div class="col-sm-4" style="background-color:#ffd800">
                c
            </div>
        </div>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tinymce")
    @Scripts.Render("~/bundles/app");
    
    @RenderSection("scripts", required: false)
</body>
</html>